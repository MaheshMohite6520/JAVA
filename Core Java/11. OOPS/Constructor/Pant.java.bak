class Pant 
{
	String name = "Nike";
	String color;
	double price;

	// Non-Static Block
	{
		System.out.println("From Non-Static block 1");
	}

	{
		System.out.println("From Non-Static block 2");
	}

	{
		System.out.println("From Non-Static block 3");
	}

	// No-Argument Constructor
	Pant()
	{
		System.out.println(name);
		System.out.println("From No-Argument Pant Constructor!");
		System.out.println();
	}

	// Parameterised Constructor
	Pant(String name, String color, double price)
	{
		this.name = name;
		this.color = color;
		this.price = price;
	}

	public void displayPant()
	{
		System.out.println("Pant Brand: "+name);
		System.out.println("Color: "+color);
		System.out.println("Price: "+price);

		System.out.println("Pant Created!");
	}
}
